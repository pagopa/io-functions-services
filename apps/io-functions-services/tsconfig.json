{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@pagopa/typescript-config-node/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "Dangerfile.ts",
    "dist",
    "**/__tests__",
    "__mocks__/**",
    "__integrations__/**",
    "docker/**",
    "vite.config.mts"
  ]
}
